<cu-custom bgColor="bg-gradual-red"  isBack="{{true}}">  <!--bgcolor - 顶部颜色 -->
	<view slot="backText">返回</view>
	<view slot="content">求助信息填写</view>
</cu-custom>
<form>

	<view class="cu-form-group margin-top">
		<view class='action'>
    <text class='cuIcon-titles text-orange '></text> 具体信息
  </view>
		
	</view>

  <view class="cu-form-group ">
		<view class="title">求助标题</view>
		<input bindinput="inputtile" placeholder="请输入求助标题"></input>
	</view>

		<view class="cu-form-group align-start">
		<view class="title">求助细节</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="inputdetail" placeholder="请输入求助细节" ></textarea>
	</view>

			<view class="cu-form-group ">
			
		<view class="title">报酬金额</view>
		<input bindinput="inputpayment" type="number" placeholder="请输入报酬金额"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-green">
				元
			</view>
		</view>
	</view>


		<view class="cu-form-group ">
		<view class="title">截止日期</view>
		<picker mode="date" value="{{date}}" start="2020-06-01" end="2029-09-01" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>

	<view class="cu-form-group">
		
		<view class="title">截止时间</view>
		<picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="TimeChange">
			<view class="picker">
				{{time}}
			</view>
		</picker>
	</view>


    <view class="cu-form-group">
		
		<view class="title">性别要求</view>
		<picker bindchange="SexChange" value="{{sexindex}}" range="{{sexpicker}}">
			<view class="picker">
				{{index?sexpicker[index]:'请选择性别'}}
			</view>
		</picker>
	</view>

  <view class="cu-bar bg-white">

		<view class="action">
			图片上传
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>

			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>



	<view class="cu-form-group margin-top">
		<view class='action'>
    <text class='cuIcon-titles text-red'></text> 个人信息
  </view>
	</view>
	<view class="cu-form-group ">
		<view class="title">是否填写个人信息</view>
		<switch bindchange="changeprivacy"></switch>
	</view>


	<view class="cu-form-group" wx:if="{{postselfinfo}}">
		<view class="title">电话</view>
		<input bindinput=""  placeholder="请输入您的手机号码"></input>
	</view>
	<view class="cu-form-group" wx:if="{{postselfinfo}}">
		<view class="title">微信或QQ</view>
		<input bindinput=""  placeholder="请输入您的微信或QQ"></input>
	</view>


	<view class="cu-bar btn-group margin-top">
    <button class="cu-btn bg-blue shadow-blur round" bindtap="onSave">保存</button>
    <button class="cu-btn bg-green shadow-blur round" bindtap="onPost">提交</button>
  </view>



</form>
